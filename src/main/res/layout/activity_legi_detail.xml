<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <LinearLayout
            android:id="@+id/loadingPage"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="720dp">
    </LinearLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="110dp">
                <ImageView
                        android:id="@+id/legi_favorite"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/favorite"
                        android:layout_margin="15dp"/>
                <ImageView
                        android:id="@+id/legi_facebook"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/f"
                        android:layout_margin="15dp"/>
                <ImageView
                        android:id="@+id/legi_twitter"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/t"
                        android:layout_margin="15dp"/>
                <ImageView
                        android:id="@+id/legi_website"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/w"
                        android:layout_margin="15dp"/>
            </LinearLayout>
            <ImageView
                    android:id="@+id/legiPhoto"
                    android:layout_width="90dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                <ImageView
                        android:id="@+id/legiPartyPic"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                <TextView
                        android:id="@+id/legiParty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"/>
            </LinearLayout>
            <TableLayout
                    android:id="@+id/legi_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:stretchColumns="*"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp">
                    <TextView
                            android:layout_width="1dip"
                            android:layout_height="wrap_content"
                            android:text="Name:"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"/>
                    <TextView
                            android:id="@+id/legiName"
                            android:layout_width="1dip"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            />
                </TableRow>
                <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp">
                    <TextView
                            android:layout_width="1dip"
                            android:layout_height="wrap_content"
                            android:text="Email:"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"/>
                    <TextView
                            android:id="@+id/legiEmail"
                            android:layout_width="1dip"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            />
                </TableRow>
                <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp">
                    <TextView
                            android:layout_width="1dip"
                            android:layout_height="wrap_content"
                            android:text="Chamber:"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"/>
                    <TextView
                            android:id="@+id/legiChamber"
                            android:layout_width="1dip"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            />
                </TableRow>
                <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp">
                    <TextView
                            android:layout_width="1dip"
                            android:layout_height="wrap_content"
                            android:text="Contact:"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"/>
                    <TextView
                            android:id="@+id/legiContact"
                            android:layout_width="1dip"
                            android:layout_height="wrap_content"
                            android:gravity="end"/>
                </TableRow>
                <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp">
                    <TextView
                            android:layout_width="1dip"
                            android:layout_height="wrap_content"
                            android:text="Start Term:"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"/>
                    <TextView
                            android:id="@+id/legiStartTerm"
                            android:layout_width="1dip"
                            android:layout_height="wrap_content"
                            android:gravity="end"/>
                </TableRow>
                <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp">
                    <TextView
                            android:layout_width="1dip"
                            android:layout_height="wrap_content"
                            android:text="End Term:"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"/>
                    <TextView
                            android:id="@+id/legiEndTerm"
                            android:layout_width="1dip"
                            android:layout_height="wrap_content"
                            android:gravity="end"/>
                </TableRow>
                <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp">
                    <TextView
                            android:layout_width="1dip"
                            android:layout_height="wrap_content"
                            android:text="Term:"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"/>
                    <RelativeLayout
                            android:layout_width="1dip"
                            android:layout_height="match_parent">
                        <ProgressBar
                                android:id="@+id/legiTerm"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@android:style/Widget.ProgressBar.Horizontal"
                                android:max="100"
                                android:progress="0"
                                android:gravity="end"
                                android:indeterminateOnly="false"
                                android:visibility="invisible"/>
                        <TextView
                                android:id="@+id/barPercentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"/>
                    </RelativeLayout>


                </TableRow>
                <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp">
                    <TextView
                            android:layout_width="1dip"
                            android:layout_height="wrap_content"
                            android:text="Office:"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"/>
                    <TextView
                            android:id="@+id/legiOffice"
                            android:layout_width="1dip"
                            android:layout_height="wrap_content"
                            android:gravity="end"/>
                </TableRow>
                <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp">
                    <TextView
                            android:layout_width="1dip"
                            android:layout_height="wrap_content"
                            android:text="State:"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"/>
                    <TextView
                            android:id="@+id/legiState"
                            android:layout_width="1dip"
                            android:layout_height="wrap_content"
                            android:gravity="end"/>
                </TableRow>
                <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp">
                    <TextView
                            android:layout_width="1dip"
                            android:layout_height="wrap_content"
                            android:text="Fax:"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"/>
                    <TextView
                            android:id="@+id/legiFax"
                            android:layout_width="1dip"
                            android:layout_height="wrap_content"
                            android:gravity="end"/>
                </TableRow>
                <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp">
                    <TextView
                            android:layout_width="1dip"
                            android:layout_height="wrap_content"
                            android:text="Birthday:"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"/>
                    <TextView
                            android:id="@+id/legiBirthday"
                            android:layout_width="1dip"
                            android:layout_height="wrap_content"
                            android:gravity="end"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
