<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

        <ImageView
                android:id="@+id/comm_favorite"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/favorite"
                android:layout_margin="15dp"
                android:layout_gravity="end"/>

        <TableLayout
                android:id="@+id/comm_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="*"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

            <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">
                <TextView
                        android:layout_width="1dip"
                        android:layout_height="wrap_content"
                        android:text="Committee ID:"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"/>
                <TextView
                        android:id="@+id/comm_id"
                        android:layout_width="1dip"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        />
            </TableRow>
            <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">
                <TextView
                        android:layout_width="1dip"
                        android:layout_height="wrap_content"
                        android:text="Name:"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"/>
                <TextView
                        android:id="@+id/commName"
                        android:layout_width="1dip"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        />
            </TableRow>
            <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp">
                <TextView
                        android:layout_width="1dip"
                        android:layout_height="wrap_content"
                        android:text="Chamber:"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="end"
                        android:weightSum="1">
                    <ImageView
                            android:id="@+id/commChamberImg"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>
                    <TextView
                            android:id="@+id/commChamber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                </LinearLayout>

            </TableRow>
            <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">
                <TextView
                        android:layout_width="1dip"
                        android:layout_height="wrap_content"
                        android:text="Parent Committee:"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"/>
                <TextView
                        android:id="@+id/commParent"
                        android:layout_width="1dip"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        />
            </TableRow>
            <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">
                <TextView
                        android:layout_width="1dip"
                        android:layout_height="wrap_content"
                        android:text="Contact:"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"/>
                <TextView
                        android:id="@+id/commContact"
                        android:layout_width="1dip"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        />
            </TableRow>
            <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">
                <TextView
                        android:layout_width="1dip"
                        android:layout_height="wrap_content"
                        android:text="Office:"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"/>
                <TextView
                        android:id="@+id/commOffice"
                        android:layout_width="1dip"
                        android:layout_height="wrap_content"
                        android:gravity="end"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</ScrollView>