<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="edu.usc.jichaozh.ownnavigation">
    <uses-permission  android:name="android.permission.INTERNET"/>
    <application
            android:allowBackup="true"
            android:label="@string/app_name"
            android:icon="@mipmap/my_launcher"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:label="@string/app_name"
                  android:name="edu.usc.jichaozh.ownnavigation.activity.MainActivity"
                  android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/activity_title_about_me"
                  android:name="edu.usc.jichaozh.ownnavigation.activity.AboutMeActivity"
                  android:parentActivityName=".activity.MainActivity"
                  />
        <activity android:label="@string/activity_legislator_detail"
                  android:name="edu.usc.jichaozh.ownnavigation.activity.LegiDetailActivity"
                  android:parentActivityName=".activity.MainActivity"
                />
        <activity android:label="@string/activity_bill_detail"
                  android:name="edu.usc.jichaozh.ownnavigation.activity.BillDetailActivity"
                  android:parentActivityName=".activity.MainActivity"
                />
        <activity android:label="@string/activity_comm_detail"
                  android:name="edu.usc.jichaozh.ownnavigation.activity.CommDetailActivity"
                  android:parentActivityName=".activity.MainActivity"
                />
    </application>

</manifest>
